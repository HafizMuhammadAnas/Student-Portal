
<button type="button" class="btn btn-dark"><%= link_to "Create New Student", new_student_path %>
</button>
<button type="button" class="btn btn-dark"><%= link_to "Back to Home page", root_path %>
</button>
<h1> Listing all students</h1>

<table class="table table-striped">
<thead>
<tr>
<th> ID_no</th>
<th> First_name</th>
<th> Last_name</th>
<th> Address</th>
<th> City</th>
<th colspan= "3"> Action</th>
</tr>
</thead>
 <tbody>
  <% @list_of_students.each do |student|%>
    <tr>
      <td><%= student.id_no %></td>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
       <td><%= student.address %></td>
       <td><%= student.city %></td>

       <td><%= link_to 'View' , student %></td>
       <td><%= link_to 'Edit' , edit_student_path(student) %></td>

       <td><%= link_to "Destroy", students_path(student), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
    </tr>
  <% end %>
 </tbody>
</table>
